<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<GridPane
        fx:controller="sample.Controller"
        xmlns:fx="http://javafx.com/fxml"
        alignment="center" hgap="10" vgap="10"
>


    <TextField fx:id="search"
               GridPane.columnIndex="1"
               GridPane.rowIndex="0"
               GridPane.rowSpan="1"
               GridPane.columnSpan="2"
    />

    <MenuButton
            fx:id="severity"
            text="severity"
            GridPane.columnIndex="4"
            GridPane.rowIndex="0"
            GridPane.rowSpan="1"
            GridPane.columnSpan="2">
        <items>
            <MenuItem text="TRIVIAL"/>
            <MenuItem text="IMPORTANT"/>
            <MenuItem text="URGENT"/>
            <MenuItem text="no severity"/>
        </items>
    </MenuButton>

    <MenuButton
            fx:id="status"
            text="status"
            GridPane.columnIndex="7"
            GridPane.rowIndex="0"
            GridPane.rowSpan="1"
            GridPane.columnSpan="2">
        <items>
            <MenuItem text="NOT STARTED"/>
            <MenuItem text="IN PROGRESS"/>
            <MenuItem text="DONE"/>
            <MenuItem text="no status"/>
        </items>
    </MenuButton>


    <TableView fx:id="list"
               GridPane.columnIndex="1"
               GridPane.rowIndex="2"
               GridPane.rowSpan="6"
               GridPane.columnSpan="12"
    />


    <TextField

            fx:id="add_id"
            promptText="id"
            GridPane.columnIndex="13"
            GridPane.rowIndex="2"
            GridPane.rowSpan="1"
            GridPane.columnSpan="2"

    />

    <TextField
            fx:id="add_summary"
            promptText="summary"
            GridPane.columnIndex="13"
            GridPane.rowIndex="3"
            GridPane.rowSpan="1"
            GridPane.columnSpan="2"

    />

    <TextField
            fx:id="add_description"
            promptText="description"
            GridPane.columnIndex="13"
            GridPane.rowIndex="4"
            GridPane.rowSpan="1"
            GridPane.columnSpan="2"
    />

    <MenuButton
            fx:id="add_severity"
            text="severity"
            GridPane.columnIndex="13"
            GridPane.rowIndex="5"
            GridPane.columnSpan="2">
        <items>
            <MenuItem fx:id="TRIVIAL" text="TRIVIAL"/>
            <MenuItem text="IMPORTANT"/>
            <MenuItem text="URGENT"/>
        </items>
    </MenuButton>

    <MenuButton
            fx:id="add_status"
            text="status"
            GridPane.columnIndex="13"
            GridPane.rowIndex="6"
            GridPane.rowSpan="1"
            GridPane.columnSpan="2">
        <items>
            <MenuItem text="NOT STARTED"/>
            <MenuItem text="IN PROGRESS"/>
            <MenuItem text="DONE"/>
        </items>
    </MenuButton>

    <Button
            fx:id="add"
            text="add a new task"
            GridPane.columnIndex="13"
            GridPane.rowIndex="7"
            GridPane.rowSpan="1"
            GridPane.columnSpan="2"
    />

    <Label
            fx:id="error"
            GridPane.columnIndex="13"
            GridPane.rowIndex="8"
            GridPane.rowSpan="1"
            GridPane.columnSpan="2"
            visible="false"
    />


</GridPane>