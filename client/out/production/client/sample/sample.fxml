<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Button?>
<GridPane
        fx:controller="sample.Controller"
        xmlns:fx="http://javafx.com/fxml"
        alignment="center" hgap="10" vgap="10"
        >


    <TextField fx:id="search"
               GridPane.columnIndex="1"
               GridPane.rowIndex="0"
               GridPane.rowSpan="1"
               GridPane.columnSpan="2"
    />

    <MenuButton
            fx:id="severity"
            text="severity"
            GridPane.columnIndex="4"
            GridPane.rowIndex="0"
            GridPane.rowSpan="1"
            GridPane.columnSpan="2">
        <items>
            <MenuItem text="no severity"/>
            <MenuItem text="TRIVIAL"/>
            <MenuItem text="IMPORTANT"/>
            <MenuItem text="URGENT"/>
        </items>
    </MenuButton>

    <MenuButton
            fx:id="status"
            text="status"
            GridPane.columnIndex="7"
            GridPane.rowIndex="0"
            GridPane.rowSpan="1"
            GridPane.columnSpan="2">
        <items>
            <MenuItem text="no status"/>
            <MenuItem text="NOT STARTED"/>
            <MenuItem text="IN PROGRESS"/>
            <MenuItem text="DONE"/>
        </items>
    </MenuButton>


    <Button
        fx:id="add"
        text="add a new task"
        GridPane.columnIndex="10"
        GridPane.rowIndex="0"
        GridPane.rowSpan="1"
        GridPane.columnSpan="2"
    />

    <TableView fx:id="list"
               GridPane.columnIndex="1"
               GridPane.rowIndex="2"
               GridPane.rowSpan="4"
               GridPane.columnSpan="12"

    >

    </TableView>



</GridPane>